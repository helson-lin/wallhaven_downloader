{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"strict": true,
        "experimentalDecorators": true,
		"paths": {
			"@/*": ["./src/*"]
		},
        "types": ["./src/typing", "node", "jest"],
		"lib": [
            "es6",
            "dom",
            "es2020.promise"
        ],
        "outDir": "./dist",
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true
	},
    "compileOnSave": true,
    "include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
